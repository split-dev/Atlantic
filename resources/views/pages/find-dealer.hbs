<!DOCTYPE html>
<html lang="en">
<head>
  {{> ../common/head }}
</head>
<body>
  {{> ../common/header}}
  {{#with image-block}}
    <section class="image-block flex-container flex-dir-column-reverse large-flex-dir-row">
      <div class="image-block__text {{text-class}}">
        <div class="image-block__text__content">
          <h3 class="image-block__title">{{{heading}}}</h3>
          <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. </p>
        </div>
      </div>
      <div class="image-block__img" id="map">

      </div>
    </section>
  {{/with}}
  <section class="dealer-tile__container">
    <div class="row">
      {{#each dealers}}
      <div class="column small-12 medium-6 large-4">
        <div class="card dealer-tile">
          <div class="dealer-tile__img" style="{{style}}">
            <img src="{{image}}" alt="#">
          </div>
          <div class="card-section flex-container flex-dir-column">
            <h4 class="fw-bold font-Montserrat text-grey-extra">{{title}}</h4>
            <a href="tel:{{tel}}" class="dealer-tile__link">
              <svg xmlns="http://www.w3.org/2000/svg"
                   width="14"
                   height="20"
                   viewBox="0 0 11 14"
                   style="margin-right: 14px;"><g><g><path fill="inherit" d="M7.604 14c-.927 0-1.782-.377-2.594-1.119-1.144-1.05-2.087-2.762-2.855-4.298C1.415 7.114.98 6.05.706 5.12A6.081 6.081 0 0 1 .43 3.383c0-.473.073-.903.232-1.28C.98 1.32 1.59.7 2.518.308l.477-.202A1.33 1.33 0 0 1 3.547 0c.478 0 .956.242 1.188.7l.956 1.914c.087.161.13.336.13.513 0 .43-.289.901-.767 1.104l-.653.282c-.087.042-.189.15-.189.271 0 .054 0 .094.029.147l2.262 4.515c.043.095.159.175.304.175.044 0 .102 0 .145-.027l.652-.282c.175-.082.363-.109.55-.109.464 0 .986.243 1.204.702l.957 1.911c.087.163.115.338.115.514 0 .457-.275.903-.753 1.104l-.464.203c-.55.242-1.087.363-1.609.363"/></g></g></svg>
              {{tel}}
            </a>
            <a href="mailto:{{email}}" class="dealer-tile__link">
              <svg xmlns="http://www.w3.org/2000/svg"
                   width="20"
                   height="13"
                   viewBox="0 0 15 9"
                   style="margin-right: 8px"><g><g><path fill="inherit" d="M14.14 9h-14V1.312l5.836 4.401c.617.465 1.604.475 2.236.025l5.928-4.53zM6.59 4.769L.266 0h13.752L7.475 4.769c-.254.181-.644.182-.885 0z"/></g></g></svg>
              {{email}}
            </a>
            <a href="#" class="dealer-tile__link">
              <svg xmlns="http://www.w3.org/2000/svg"
                   width="15"
                   height="20"
                   viewBox="0 0 15 20"
                   style="margin-right: 11px; margin-left: 2px;"><g><g><path fill="inherit" d="M7.536 10.154a2.618 2.618 0 1 1 0-5.236 2.618 2.618 0 0 1 0 5.236zM7.541 0C3.834 0 0 2.832 0 7.572c0 4.966 7.01 12.034 7.31 12.332a.327.327 0 0 0 .463 0c.298-.298 7.309-7.366 7.309-12.332C15.082 2.832 11.248 0 7.541 0z"/></g></g></svg>
              <span>{{{address}}}</span>
            </a>
            <a href="#" class="btn btn-primary">Get directions</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
  {{> ../partials/subscribe }}
  {{> ../common/footer}}
  <script>
    function initMap() {
      var map = new google.maps.Map(
              document.getElementById('map'), {
                zoom: 4,
                center: {lat: -28.6539008, lng: 144.9608568},
                disableDefaultUI: true
              });
      var marker = new google.maps.Marker({
        position: {lat: -37.6539008, lng: 144.9608568},
        map: map
      });
      var marker1 = new google.maps.Marker({
        position: {lat: -38.6539008, lng: 145.9608568},
        map: map
      });
      var marker2 = new google.maps.Marker({
        position: {lat: -32.6539008, lng: 141.9608568},
        map: map
      });
      var marker3 = new google.maps.Marker({
        position: {lat: -32.6539008, lng: 148.9608568},
        map: map
      });
    }
  </script>
  <script async defer
          src="https://maps.googleapis.com/maps/api/js?&callback=initMap">
  </script>
</body>
</html>

