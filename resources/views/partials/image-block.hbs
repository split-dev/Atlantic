{{#with image-block}}
<section class="image-block flex-container flex-dir-column-reverse large-flex-dir-row">
  <div class="image-block__text {{text-class}}">
    <div class="image-block__text__content">
      {{#if subtitle}}<p class="image-block__subtitle text-uppercase">{{subtitle}}</p>{{/if}}
      <h3 class="image-block__title">{{{heading}}}</h3>
      {{#if text}}<p>{{{text}}}</p>{{/if}}
      {{#if label}}<a href="#" class="btn fw-bold">{{label}}</a>{{/if}}
    </div>
  </div>
  <div class="image-block__img" style="background-image: url('{{image}}')"></div>
</section>
{{/with}}
